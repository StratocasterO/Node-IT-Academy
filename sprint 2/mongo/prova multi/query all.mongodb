use("referencies")

db.client.aggregate([
    {
        $lookup: {
            from: 'address',
            localField: 'address_id',
            foreignField: '_id',
            as: 'address'
        }
    },
    {
        $lookup: {
            from: 'products',
            localField: 'orders.products',
            foreignField: '_id',
            as: 'products'
        }
    }
])